# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=license_db
DB_USERNAME=license_user
DB_PASSWORD=license_pass

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Ed25519 Key Pairs for JWT Signing (Base64 encoded)
# Generate with: openssl genpkey -algorithm Ed25519 | base64 -w 0
ED25519_PRIVATE_KEY_1=your_base64_encoded_private_key_here
ED25519_PUBLIC_KEY_1=your_base64_encoded_public_key_here

# Backup key for rotation
ED25519_PRIVATE_KEY_2=your_base64_encoded_private_key_2_here
ED25519_PUBLIC_KEY_2=your_base64_encoded_public_key_2_here

# Key rotation settings
CURRENT_KEY_ID=key-1
BACKUP_KEY_ID=key-2

# Encryption key for sealing private keys (32 bytes, Base64 encoded)
# Generate with: openssl rand -base64 32
SEAL_BOX_KEY=your_base64_encoded_seal_box_key_here

# API Configuration
API_BASE_URL=http://localhost:8080
WEBHOOK_BASE_URL=http://localhost:8080

# Security
BCRYPT_ROUNDS=12
JWT_ISSUER=license-management-api

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_BURST_SIZE=50

# Audit Configuration
AUDIT_RETENTION_DAYS=90

# Monitoring
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus
