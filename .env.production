# Database Configuration
DATABASE_PASSWORD=your_secure_database_password

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password

# JWT Configuration
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here_minimum_256_bits
JWT_EXPIRATION=3600

# License Signing Keys (Base64 encoded)
LICENSE_SIGNING_PRIVATE_KEY=your_base64_encoded_private_key
LICENSE_SIGNING_PUBLIC_KEY=your_base64_encoded_public_key

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-admin-panel.com

# Rate Limiting
RATE_LIMIT_RPM=100
RATE_LIMIT_BURST=150

# Monitoring
GRAFANA_PASSWORD=your_secure_grafana_password

# SSL Certificate paths (if using HTTPS)
SSL_CERT_PATH=/path/to/your/certificate.crt
SSL_KEY_PATH=/path/to/your/private.key

# Log Level
LOG_LEVEL=INFO

# Application Environment
ENVIRONMENT=production
HOSTNAME=license-api-prod-01

# Performance Tuning
DATABASE_POOL_SIZE=50
DATABASE_POOL_MIN_IDLE=10
TOMCAT_MAX_THREADS=200
TOMCAT_MIN_THREADS=20
REDIS_POOL_MAX_ACTIVE=50
